// http://www.adventuresontheedge.net/post/2019/11/23/VS-Code-Angular-launch-in-debug-browser-configuration
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "npm start",
        "type": "npm",
        "script": "start",
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "pattern": "$tsc",
          "background": {
            "beginsPattern": {
              "regexp": "(.*?)"
            },
            "endsPattern": {
              "regexp": "ERR!|Compiled"
            }
          }
        }
      },
      {
        "label": "npm test",
        "type": "npm",
        "script": "test",
        "problemMatcher": [],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "type": "npm",
        "script": "build",
        "group": "build",
        "problemMatcher": []
      }
    ]
  }